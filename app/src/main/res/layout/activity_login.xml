<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97E2DDE3">

    <!-- Top Center Elements: BE SAFE, Logo, and LOGIN Button -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/league_spartan_semibold"
        android:text="Your Safety, Our Priority"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="131dp"
        android:layout_height="94dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/women" />

    <!-- New TextView below the Logo -->
    <TextView
        android:id="@+id/textViewLogoBelow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/league_spartan_semibold"
        android:text="LOGIN"
        android:textSize="32dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="189dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:backgroundTint="#4B0857"
        android:fontFamily="@font/league_spartan_semibold"
        android:shadowColor="@color/black"
        android:text="LOGIN"
        android:textSize="16sp" />

    <!-- Email, Email Input, Password, Password Input aligned to the left -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/textViewLogoBelow"
        android:fontFamily="@font/league_spartan_semibold"
        android:text="Email"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="421dp"
        android:layout_height="64dp"
        android:layout_below="@id/textView7"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_corners"
        android:padding="@dimen/places_autocomplete_search_input_padding"
        android:fontFamily="@font/league_spartan_semibold"
        android:hint="Enter Your Email"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEmail"
        android:layout_marginStart="32dp"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/league_spartan_semibold"
        android:text="Password"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="421dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_marginStart="32dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/league_spartan_semibold"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        android:padding="@dimen/places_autocomplete_search_input_padding" />

    <!-- "Don't Remember Password? Recover it" aligned to the right -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/etPassword"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/league_spartan_semibold"
        android:text="Don't Remember Password? Recover it"
        android:textColor="#34063C"
        android:textSize="14sp" />

    <!-- "Don't have an account? Sign up here" below password recovery and right-aligned -->
    <TextView
        android:id="@+id/tvSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/textView4"
        android:layout_marginTop="8dp"
        android:text="Don't have an account? Sign up here"
        android:textColor="#2196F3" />

    <!-- Centered "Or Login with" and lines -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSignUp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/line" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/league_spartan_semibold"
            android:text="Or Login with"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/line" />
    </LinearLayout>

    <!-- Facebook and Google buttons aligned below "Or Login with" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLogin"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="62dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <!-- Google Button -->
        <LinearLayout
            android:layout_width="142dp"
            android:layout_height="64dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_corners"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_corners"
                android:contentDescription="Google"
                app:srcCompat="@drawable/googleg_standard_color_18" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/league_spartan_semibold"
                android:gravity="center_vertical"
                android:text="Google"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Facebook Button -->
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_corners"
                android:contentDescription="Facebook"
                app:srcCompat="@drawable/facebook" />

            <TextView
                android:id="@+id/imageButtonText"
                android:layout_width="77dp"
                android:layout_height="33dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/league_spartan_semibold"
                android:gravity="center_vertical"
                android:text="Facebook"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
