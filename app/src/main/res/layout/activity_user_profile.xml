<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- TextView for displaying USER PROFILE, centered at the top -->
    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER PROFILE"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- ImageView for displaying the profile picture -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/textView13"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/face"
        android:contentDescription="Profile Picture" />

    <!-- Camera icon for uploading profile picture -->

    <!-- TextView for displaying the user's name -->


    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivProfilePicture"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- EditText for displaying user's name (not editable) -->
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_marginTop="8dp"
        android:clickable="false"
        android:focusable="false"
        android:hint="Name"
        android:padding="@dimen/places_autocomplete_search_input_padding"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp"
        tools:ignore="DuplicateClickableBoundsCheck" />

    <!-- TextView for displaying the user's email -->
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etName"
        android:layout_marginTop="24dp"
        android:text="Email"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- EditText for displaying user's email (not editable) -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEmail"
        android:layout_marginTop="8dp"
        android:clickable="false"
        android:focusable="false"
        android:hint="Email"
        android:padding="@dimen/places_autocomplete_search_input_padding"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp" />

    <!-- TextView for displaying the user's phone number -->
    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEmail"
        android:layout_marginTop="24dp"
        android:text="Phone Number"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- EditText for updating the user's phone number -->
    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPhoneNumber"
        android:layout_marginTop="8dp"
        android:padding="@dimen/places_autocomplete_search_input_padding"
        android:hint="Enter your phone number"
        android:textSize="16sp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPhoneNumber"
        android:layout_marginTop="24dp"
        android:backgroundTint="#4B0857"
        android:fontFamily="@font/league_spartan_semibold"
        android:text="Save"
        android:textSize="20sp" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSave"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4B0857"
        android:fontFamily="@font/league_spartan_semibold"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>
