<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97E2DDE3">

    <!-- LinearLayout with ImageButton and TextView for Facebook -->

    <LinearLayout
        android:id="@+id/imageButtonLayout"
        android:layout_width="151dp"
        android:layout_height="47dp"
        android:layout_above="@+id/btnSignUp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/rounded_corners"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:background="@drawable/rounded_corners"
            android:contentDescription="Facebook"
            app:srcCompat="@drawable/facebook" />

        <TextView
            android:id="@+id/imageButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/league_spartan_semibold"
            android:text="Facebook"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="698dp"
        android:fontFamily="@font/league_spartan_semibold"
        android:text="BE SAFE"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="22dp"
        android:backgroundTint="#4B0857"
        android:fontFamily="@font/league_spartan_semibold"
        android:shadowColor="@color/black"
        android:text="SIGN UP"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="93dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btnSignUp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="287dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/rounded_corners"
        android:contentDescription="google"
        app:srcCompat="@drawable/googleg_standard_color_18" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/league_spartan_semibold"
        android:text="Or Login with"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/ettPassword"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/rounded_corners"
        android:ems="10"
        android:fontFamily="@font/league_spartan_semibold"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        android:padding="@dimen/places_autocomplete_search_input_padding" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="166dp"
        android:layout_height="57dp"
        android:layout_above="@+id/ettPassword"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="204dp"
        android:layout_marginBottom="-9dp"
        android:fontFamily="@font/league_spartan_semibold"
        android:text="Password"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/ettEmail"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/rounded_corners"
        android:ems="10"
        android:fontFamily="@font/league_spartan_semibold"
        android:hint="Enter Your Email"
        android:inputType="text"
        android:padding="@dimen/places_autocomplete_search_input_padding" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="127dp"
        android:layout_height="78dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="44dp"
        app:srcCompat="@drawable/women" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="127dp"
        android:layout_height="44dp"
        android:layout_above="@+id/ettEmail"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="175dp"
        android:fontFamily="@font/league_spartan_semibold"
        android:text="SIGN UP"
        android:textAlignment="center"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ettEmail"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="260dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/league_spartan_semibold"
        android:text="Email"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="92dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="221dp"
        android:layout_marginBottom="-1dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/league_spartan_semibold"
        android:paddingTop="@dimen/places_autocomplete_search_input_padding"
        android:text="Google"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="177dp"
        android:layout_height="144dp"
        android:layout_above="@+id/imageButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="230dp"
        android:layout_marginBottom="-56dp"
        app:srcCompat="@drawable/line" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="177dp"
        android:layout_height="144dp"
        android:layout_above="@+id/imageButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="-60dp"
        app:srcCompat="@drawable/line" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="286dp"
        android:layout_marginBottom="73dp"
        android:fontFamily="@font/league_spartan_semibold"
        android:text="Name"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="360dp"
        android:layout_height="57dp"
        android:layout_above="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corners"
        android:padding="@dimen/places_autocomplete_search_input_padding"
        android:ems="10"
        android:hint="Enter Your Name"
        android:inputType="text" />



</RelativeLayout>
